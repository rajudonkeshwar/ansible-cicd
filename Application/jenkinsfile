  pipeline {
    agent any


    stages {
        stage('Checkout Code') {
            steps {
                echo 'scm git'
                git branch: 'main', url: 'https://github.com/rajudonkeshwar/ansible-cicd.git'
            }
        }
    	

        stage('BuildingJar') {
            steps {
                echo 'maven build'
                sh 'cd Application && mvn clean package'
            }
        }
		
		
        stage('sonar') {
            steps {
                echo 'scanning project'
                sh 'ls -ltr'
                sh '''cd Application && mvn sonar:sonar \\
                      -Dsonar.host.url=http://localhost:9000 \\
                      -Dsonar.login=squ_49b388be41edcb94c88d4a426e97acd17108ccb2'''
            }
    	}

       stage('Build docker image'){
            steps{
                script{
                    echo 'docker image build'
					sh 'cd Application && docker build -t rajudonkeshwar/k8s:${BUILD_NUMBER} .'
                }
            }
        }
		
    //    stage('docker image scan'){
    //     steps{
    //         sh "trivy image rajudonkeshwar/k8s:${BUILD_NUMBER}"
    //     }
    // }		
         

		 stage('Push image to Hub'){
            steps{
                script{
                   withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                   sh 'docker login -u rajudonkeshwar -p ${dockerhub}'

              }
                   sh 'docker push rajudonkeshwar/k8s:${BUILD_NUMBER}'
                }
            }
        }
		
      stage('Update kubernetes Deployment manifest File') {
        environment {
            GIT_REPO_NAME = "ansible-cicd"
            GIT_USER_NAME = "rajudonkeshwar"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "dvijaychandrakumar@gmail.com"
                    git config user.name "rajudonkeshwar"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/k8s:*/k8s:${BUILD_NUMBER}/g" Ansible/k8s_deployment.yaml
                    echo "===== Updated Deployment File ====="
                    cat Ansible/k8s_deployment.yaml
                    git add Ansible/k8s_deployment.yaml
                    git status
                    git commit -m "Update deployment image tag to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main

                '''
            }
        }
    }

    stage('k8s Deployment using ansible'){
            steps{
            script{
            ansiblePlaybook credentialsId: 'ssh', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/inventory.ini', playbook: 'Ansible/ansible_k8s_deploy_playbook.yaml'       
            }
            }
        }
}
}

